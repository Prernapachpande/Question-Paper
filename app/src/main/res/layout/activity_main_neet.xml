<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Neet.MainNeet"
    android:background="@drawable/layoutneet">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rectneet"
        android:src="@drawable/rectneet"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/questionppr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/questionpaper"
        android:layout_marginRight="65dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tree"
        android:layout_alignRight="@id/rectneet"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/tree"/>

    <ImageView
        android:id="@+id/neetlayout"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/tree"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="103dp"
        android:src="@drawable/neetlayout" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/neetlayout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-22dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/line" />
    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/line"
        android:id="@+id/recycler_neet"
        android:layout_marginTop="15dp"/>

</RelativeLayout>